<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小白条粗细"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:id="@+id/text_navigation_a"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <SeekBar
            android:id="@+id/navigation_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:min="0" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小白条高度"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:id="@+id/text_navigation_x"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <SeekBar
            android:id="@+id/navigation_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="15"
            />
    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小白条长度"
        android:textSize="20sp"
        android:id="@+id/text_navigation_y"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <SeekBar
            android:id="@+id/navigation_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="1"
            android:max="381"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置小白条外观"
        android:id="@+id/setnavigation_layout"
        />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="恢复默认小白条外观"
        android:id="@+id/set_default_navigation_layout"
        />

</LinearLayout>